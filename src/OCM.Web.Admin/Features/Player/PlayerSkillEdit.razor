<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-4">Edit Skills</MudText>

        <MudGrid>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Magic Level" @bind-Value="Skill.MagicLevel" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Fist" @bind-Value="Skill.Fist" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Club" @bind-Value="Skill.Club" Variant="Variant.Outlined"/>
            </MudItem>

            <MudItem xs="12" sm="4">
                <MudTextField Label="Sword" @bind-Value="Skill.Sword" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Axe" @bind-Value="Skill.Axe" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Distance" @bind-Value="Skill.Distance" Variant="Variant.Outlined"/>
            </MudItem>

            <MudItem xs="12" sm="4">
                <MudTextField Label="Shielding" @bind-Value="Skill.Shielding" Variant="Variant.Outlined"/>
            </MudItem>
            <MudItem xs="12" sm="4">
                <MudTextField Label="Fishing" @bind-Value="Skill.Fishing" Variant="Variant.Outlined"/>
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Update</MudButton>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public PlayerSkillEditViewModel Skill { get; set; } = new();

    void Submit()
    {
        MudDialog.Close(DialogResult.Ok(Skill));
    }

    void Cancel()
    {
        MudDialog.Cancel();
    }

    public class PlayerSkillEditViewModel
    {
        public int MagicLevel { get; set; }
        public int Fist { get; set; }
        public int Club { get; set; }
        public int Sword { get; set; }
        public int Axe { get; set; }
        public int Distance { get; set; }
        public int Shielding { get; set; }
        public int Fishing { get; set; }
    }

}
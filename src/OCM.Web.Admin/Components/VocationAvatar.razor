<MudAvatar Size="Size.Large" Class="me-3">
    @if (_imageUrl is not null)
    {
        <MudImage Src="avatars/paladin.png"></MudImage>
    }
</MudAvatar>

@code{

    [Parameter] public string Vocation { get; set; }

    private string _imageUrl;

    protected override void OnInitialized()
    {
        _imageUrl =
            Vocation?.ToLower() switch
            {
                { } v when v.Contains("knight") => "avatars/knight.png",
                { } v when v.Contains("paladin") => "avatars/paladin.png",
                { } v when v.Contains("sorcerer") => "avatars/sorcerer.png",
                { } v when v.Contains("druid") => "avatars/druid.png",
                { } v when v.Contains("monge") => "avatars/monge.png",
                { } v when v.Contains("god") => "avatars/god.png",
                _ => null
            };
    }


}